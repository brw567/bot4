# Bot3 Trading Platform Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bot3trading
DB_USER=bot3user
DB_PASSWORD=bot3pass

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# ============================================
# EXCHANGE CONFIGURATION
# ============================================
# Binance (use testnet keys for development)
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_SECRET=your_testnet_secret_here
BINANCE_TESTNET=true

# Additional exchanges (future)
# KRAKEN_API_KEY=
# KRAKEN_SECRET=
# BITSTAMP_API_KEY=
# BITSTAMP_SECRET=

# ============================================
# RISK MANAGEMENT (Quinn's Domain)
# ============================================
MAX_POSITION_SIZE=0.02          # 2% max per position
MAX_TOTAL_EXPOSURE=0.10         # 10% max total exposure
MAX_LEVERAGE=3                  # 3x maximum leverage
MAX_DRAWDOWN=0.15              # 15% max drawdown
MAX_DAILY_LOSS=0.05            # 5% daily loss limit
REQUIRE_STOP_LOSS=true         # Mandatory stop-loss
MIN_SHARPE_RATIO=1.0           # Minimum Sharpe ratio
MAX_CORRELATION=0.7            # Max correlation between positions

# ============================================
# TRADING CONFIGURATION
# ============================================
INITIAL_CAPITAL=10000
TRADING_MODE=paper              # paper/testnet/live
TRADING_INTERVAL=60            # Trading loop interval in seconds
USE_LEVERAGE=false

# ============================================
# ML CONFIGURATION (Morgan's Domain)
# ============================================
ML_ENABLED=true
ML_CONFIDENCE_THRESHOLD=0.65   # Minimum confidence for ML signals
ML_RETRAIN_INTERVAL=7          # Days between retraining
ML_FEATURE_COUNT=200           # Number of features
ML_MAX_OVERFIT_GAP=0.05       # Max train/val accuracy gap

# ============================================
# PERFORMANCE TARGETS (Jordan's Domain)
# ============================================
TARGET_LATENCY_MS=100          # Target latency in milliseconds
TARGET_UPTIME=0.999            # 99.9% uptime target

# ============================================
# MONITORING
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=bot3admin

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1                  # Keep at 1 for trading consistency

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO                 # DEBUG/INFO/WARNING/ERROR/CRITICAL
LOG_FILE=/var/log/bot3/trading.log

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_WEBSOCKET=true
ENABLE_ARBITRAGE=true
ENABLE_ML_TRADING=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_PAPER_TRADING=true

# ============================================
# INNOVATION BUDGET (Alex's 20% Rule)
# ============================================
INNOVATION_BUDGET=0.20         # 20% for experimental strategies

# ============================================
# DEPLOYMENT (Jordan's Domain)
# ============================================
DEPLOY_ENV=development         # development/staging/production
DOCKER_REGISTRY=
AWS_REGION=us-east-1
GCP_PROJECT=

# ============================================
# SECURITY (Avery's Domain)
# ============================================
JWT_SECRET_KEY=your_super_secret_jwt_key_here
API_RATE_LIMIT=100            # Requests per minute
ENABLE_2FA=false
ENCRYPTION_KEY=

# ============================================
# EXTERNAL APIS
# ============================================
# News and Sentiment
NEWS_API_KEY=
TWITTER_API_KEY=
REDDIT_CLIENT_ID=

# Economic Data
FRED_API_KEY=
ALPHA_VANTAGE_KEY=

# Market Data
COINGECKO_API_KEY=
CRYPTOCOMPARE_API_KEY=

# ============================================
# TESTING
# ============================================
TEST_MODE=false
TEST_EXCHANGE=binance_testnet
TEST_INITIAL_BALANCE=10000

# ============================================
# ALERTS AND NOTIFICATIONS
# ============================================
ENABLE_ALERTS=true
ALERT_EMAIL=
SLACK_WEBHOOK=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
PAGERDUTY_KEY=